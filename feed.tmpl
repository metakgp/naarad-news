  <script type="text/javascript" src="js/jquery.min.js"></script>
  <script type="text/javascript" src="js/jquery.lazy.js"></script>
    <script type="text/javascript" charset="utf-8">
  $(function() {
     $("img.lazy").lazyload({           
     		     event: "lazyload",
             effect: "fadeIn",
             effectspeed: 2000});
  });
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>  
  <script type="text/javascript" src="js/string_score.min.js"></script>
  <script type="text/javascript" src="js/bootstrap.min.js"></script>
  <script type="text/javascript" src="js/mdb.js"></script>
  <script type="text/javascript" src="js/wow.js"></script>
  <script type="text/javascript" src="js/custom.js"></script>
  <script src="js/readmore.min.js"></script>
  <script type="text/javascript">
      $('.Post').readmore({
        afterToggle: function(trigger, element, expanded){
          if(expanded)
          {
            element.parent().attr('class',"col-md-12 col-sm-12 wow bounceInUp PostMain");
            $(".snooze").each(function(){
              $(this).attr("class","col-md-12 col-sm-12 snooze");
            });
          }
          else{
            element.parent().attr('class',"col-md-4 col-sm-12 wow bounceInUp PostMain");
            $(".snooze").each(function(){
              $(this).attr("class","col-md-4 col-sm-12 snooze");
            });
          }
        }
      });
  </script>
  <!-- END INCLUDING JS SCRIPTS --> 

</html>
