<html>
    <link rel="stylesheet" type="text/css" href="styles.css">
    <title>KGP Trends </title>
    <div class="row">
      <div class="col-12">
        {% for post in data %}
          <div class="row post">
            <div class="post-header">
              <h3 class="post-source">
                <b> {{post['source'] }} </b> <br>
              </h3>
              <h4 class="post-time">
                <a href="{{post['url']}}"> Posted on: {{post['created_time']}} </a>
              </h4>
            </div>
            <div class="post-message">
              <p> {{ post['message'] }} </p>
              {% if post['pic'] %}
                  <img class="center" src="{{ post['pic'] }}">
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
</html>
